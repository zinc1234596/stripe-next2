{
  "name": "stripe-revenue-dashboard",
  "build": {
    "command": "npm run build",
    "directory": ".next",
    "environment": {
      "NODE_VERSION": "18"
    }
  },
  "compatibility_flags": ["nodejs_compat"],
  "env": {
    "STRIPE_SECRET_KEY": {
      "description": "Your Stripe Secret Key (starts with sk_test_ or sk_live_)",
      "required": true
    },
    "DEFAULT_TIMEZONE": {
      "description": "Default timezone for dashboard (e.g., Asia/Shanghai)",
      "default": "Asia/Shanghai",
      "required": false
    },
    "STRIPE_SECRET_KEY_1": {
      "description": "Additional Stripe Key for merchant 1 (optional)",
      "required": false
    },
    "STRIPE_SECRET_KEY_2": {
      "description": "Additional Stripe Key for merchant 2 (optional)",
      "required": false
    },
    "STRIPE_SECRET_KEY_3": {
      "description": "Additional Stripe Key for merchant 3 (optional)",
      "required": false
    }
  }
}
